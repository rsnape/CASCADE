<?xml version="1.0" encoding="UTF-8"?>
<context>	
	<!--  First aggregator with households - no Gas and a range of thermal properties -->
	<aggregator
		class="uk.ac.dmu.iesd.cascade.agents.aggregators.EnergyLocalClub"
		number="1">
		<!-- 75 non smart controlled consumers (manual only) -->
		<prosumer class="uk.ac.dmu.iesd.cascade.agents.prosumers.HouseholdProsumer"
			number="77">
			<lossRateMean>275</lossRateMean>
			<lossRateSD>75</lossRateSD>
			<thermalMassMean>12.5</thermalMassMean>
			<thermalMassSD>2.5</thermalMassSD>
			<percentageGas>100</percentageGas>
			<smartControlProbability>0</smartControlProbability>
		</prosumer>
		
		<!-- 25 consumers with smart controller -->
		<prosumer class="uk.ac.dmu.iesd.cascade.agents.prosumers.HouseholdProsumer"
			number="20">
			<lossRateMean>275</lossRateMean>
			<lossRateSD>75</lossRateSD>
			<thermalMassMean>12.5</thermalMassMean>
			<thermalMassSD>2.5</thermalMassSD>
			<percentageGas>100</percentageGas>
			<smartControlProbability>100</smartControlProbability>
		</prosumer>
		
        <!-- Heat pump prosumer with PV and smart controller (one) -->
		<prosumer class="uk.ac.dmu.iesd.cascade.agents.prosumers.HouseholdProsumer"
			number="1">
			<percentageGas>0</percentageGas>
			<lossRateMean>275</lossRateMean>
			<lossRateSD>75</lossRateSD>
			<thermalMassMean>12.5</thermalMassMean>
			<thermalMassSD>2.5</thermalMassSD>
			<pv orientation="250">3.5</pv>
		</prosumer>
        

			<prosumer class="uk.ac.dmu.iesd.cascade.agents.prosumers.DataFileProsumer"
			number="1"
			demandFileName = ""
			genFileName = "bethesdaHydro.csv">
			
		</prosumer>
		
	</aggregator>

	<market>
		false
	</market>
    
	
</context>